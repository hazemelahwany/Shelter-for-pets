<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.shelterforpets.SignUpActivity">


    <TextView
        android:id="@+id/registeration_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="18dp"
        android:text="@string/registeration_form"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/registeration_form"
        android:layout_centerHorizontal="true"
        android:hint="@string/email_hint"/>

    <EditText
        android:id="@+id/signup_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/signup_email"
        android:layout_alignRight="@+id/signup_email"
        android:layout_below="@+id/signup_email"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/password_hint"/>

    <EditText
        android:id="@+id/signup_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/signup_password"
        android:layout_alignStart="@+id/signup_password"
        android:layout_below="@+id/signup_password"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/confirm_password_hint"/>

    <Button
        android:id="@+id/signup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_confirm_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="@string/signup_button" />
</RelativeLayout>
