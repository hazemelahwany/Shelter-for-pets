<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/events_list_item">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:id="@+id/view_event_photo"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/view_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/view_event_photo"
        android:layout_toRightOf="@+id/view_event_photo"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/view_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_event_time"
        android:layout_alignRight="@+id/view_event_name"
        android:layout_alignEnd="@+id/view_event_name"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/view_event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view_event_photo"
        android:layout_alignLeft="@+id/view_event_date"
        android:layout_alignStart="@+id/view_event_date"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/view_event_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view_event_photo"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp" />

</RelativeLayout>