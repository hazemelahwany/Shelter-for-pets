<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/pet_image_view"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/pet_image_view"
        android:layout_toEndOf="@+id/pet_image_view"
        android:id="@+id/pet_name"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pet_type"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/pet_name"
        android:layout_alignLeft="@+id/pet_name"
        android:layout_alignStart="@+id/pet_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pet_breed"
        android:layout_marginTop="8dp"
        android:layout_alignBottom="@+id/pet_image_view"
        android:layout_alignLeft="@+id/pet_type"
        android:layout_alignStart="@+id/pet_type" />

</RelativeLayout>