<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.shelterforpets.User.UserMainActivity"
    android:layout_margin="8dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign out"
        android:id="@+id/signout_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/camera_button"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp"
        android:id="@+id/capture_animal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/taken_pic"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location_tv"
        android:layout_below="@+id/taken_pic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="38dp" />

    <Button
        android:id="@+id/user_show_events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_events_button"
        android:layout_above="@+id/capture_animal"
        android:layout_toLeftOf="@+id/signout_button"
        android:layout_toStartOf="@+id/signout_button"
        android:layout_marginBottom="11dp" />

    <Button
        android:id="@+id/user_show_vets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/capture_animal"
        android:layout_alignRight="@+id/capture_animal"
        android:layout_alignTop="@+id/user_show_events"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:text="@string/vets_directory" />

</RelativeLayout>
