<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.salmaali.app.petspot.User.EditProfileActivity"
    android:background="@drawable/dog_with_filter">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/imaage_change"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/edit_profile_pic"
        android:layout_alignEnd="@+id/edit_profile_pic"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="49dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profile_icon"
        android:layout_marginTop="88dp"
        android:id="@+id/edit_profile_pic"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/edit_profile_pic"
        android:layout_centerHorizontal="true"
        android:id="@+id/edit_profile_first_name"
        android:hint="@string/first_name_hint"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_profile_first_name"
        android:layout_alignLeft="@+id/edit_profile_first_name"
        android:layout_alignStart="@+id/edit_profile_first_name"
        android:layout_marginTop="16dp"
        android:hint="@string/last_name_hint"
        android:id="@+id/edit_profile_last_name"/>

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:src="@drawable/save_button"
        android:layout_marginTop="22dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:id="@+id/edit_profile_save_button"
        android:layout_below="@+id/edit_profile_volunteer_checkBox"
        android:layout_centerHorizontal="true" />
    <CheckBox
        android:id="@+id/edit_profile_volunteer_checkBox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/volunteer_check_box"
        android:layout_below="@+id/edit_profile_last_name"
        android:layout_alignLeft="@+id/edit_profile_last_name"
        android:layout_alignStart="@+id/edit_profile_last_name" />

</RelativeLayout>
