<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.shelterforpets.User.EditProfileActivity"
    android:background="@drawable/dog_with_filter">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profile_icon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/edit_profile_pic"
        android:clickable="true"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/edit_profile_pic"
        android:layout_centerHorizontal="true"
        android:id="@+id/edit_profile_first_name"
        android:hint="@string/first_name_hint"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_profile_first_name"
        android:layout_alignLeft="@+id/edit_profile_first_name"
        android:layout_alignStart="@+id/edit_profile_first_name"
        android:layout_marginTop="16dp"
        android:hint="@string/last_name_hint"
        android:id="@+id/edit_profile_last_name"/>

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:src="@drawable/save_button"
        android:layout_marginTop="68dp"
        android:background="@android:color/transparent"
        android:layout_below="@+id/edit_profile_last_name"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:id="@+id/edit_profile_save_button"/>

</RelativeLayout>
