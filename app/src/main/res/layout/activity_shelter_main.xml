<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.shelterforpets.Shelter.ShelterMainActivity"
    android:background="@drawable/user_background">

    <ImageButton
        android:id="@+id/shelter_view_request"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:text="@string/view_requests"
        android:layout_marginBottom="146dp"
        android:src="@drawable/show_requests"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp" />

    <ImageButton
        android:id="@+id/shelter_view_events"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/shelter_view_request"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:text="@string/show_events_button"
        android:src="@drawable/event"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"/>

</RelativeLayout>
