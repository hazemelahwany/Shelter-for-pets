<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.salmaali.app.petspot">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- The API key for Google Maps-based APIs. -->

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <!-- <meta-data -->
        <!-- android:name="com.google.android.geo.API_KEY" -->
        <!-- android:value="AIzaSyDzBzFd_gTCBUFk__e4Q4i5pB9pVJp-vwQ"/> -->

        <activity
            android:name="com.salmaali.app.petspot.Authentication.LogInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.salmaali.app.petspot.Authentication.ForgotPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.salmaali.app.petspot.Authentication.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.salmaali.app.petspot.User.UserMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.salmaali.app.petspot.Admin.AdminActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.salmaali.app.petspot.Admin.AddShelters"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.salmaali.app.petspot.Admin.AddAdmins"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.salmaali.app.petspot.Admin.AddVets"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.salmaali.app.petspot.Admin.AddEvents"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.salmaali.app.petspot.Admin.SelectShelterLocation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.salmaali.app.petspot.Shelter.ShelterMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.salmaali.app.petspot.Shelter.ReceivedRequests"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.salmaali.app.petspot.Authentication.StarterActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.salmaali.app.petspot.User.ShowEventsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.salmaali.app.petspot.User.ShowVetsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.salmaali.app.petspot.User.ShowUsersActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.salmaali.app.petspot.User.UserProfileActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.salmaali.app.petspot.User.PetDetailsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.salmaali.app.petspot.User.EditProfileActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.salmaali.app.petspot.User.AddPet"
            android:screenOrientation="portrait"/>
        <activity android:name="com.salmaali.app.petspot.User.EditPet"
            android:screenOrientation="portrait"/>
    </application>

</manifest>